{
  "manifest_version": 2,
  "name": "jackbot",
  "version": "1.0",
  "description": "Bot that automatically finds JackBox servers for you",
  "icons": {
    "48": "icons/border-48.png",
    "96": "icons/border-96.png"
  },

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "icons/border-48.png",
    "default_title": "Find Jackbox servers",
    "default_popup": "popup/jackbot.html"
  }
}